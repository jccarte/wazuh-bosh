#!/bin/bash

set -e # exit immediately if a simple command exits with a non-zero status
set -u # report the usage of uninitialized variables

JOB_NAME=filebeat
PACKAGE_DIR=/var/vcap/packages/filebeat
RUN_DIR=/var/vcap/sys/run/wazuh-server
LOG_DIR=/var/vcap/sys/log/$JOB_NAME
PIDFILE=${RUN_DIR}/${JOB_NAME}.pid

case $1 in

  start)
    mkdir -p $RUN_DIR
    mkdir -p $LOG_DIR
    
    echo $$ > $PIDFILE
    exec ${PACKAGE_DIR}/filebeat -e -c /var/vcap/jobs/wazuh-server/config/filebeat.yml \
         >>${LOG_DIR}/${JOB_NAME}.stdout.log \
         2>>${LOG_DIR}/${JOB_NAME}.stderr.log

    ;;


  stop)
    pid=$(cat $PIDFILE)
    kill -9 $pid
    rm -rf $PIDFILE

    ;;
  *)
    echo "Usage: wazuh_agent_ctl {ossec-daemon}{start|stop}"

    ;;

esac
exit 0